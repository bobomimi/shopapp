<div class="listing_seller">
<table class="table table-striped table-bordered">
  <tr>
    <th class="center"><h5><%= t("seller.image") %></h5></th>
    <th class="center"><h5><%= t("seller.name") %></h5></th>
    <th class="center"><h5><%= t("seller.description") %></h5></th>
    <th class="center"><h5><%= t("seller.price") %></h5></th>
    <th class="center"><h5><%= t("seller.action") %></h5></th>
  </tr>

  <% @listings.each do |listing| %>
    <tr>
      <td><%= image_tag listing.image.url(:thumb) %></td>
      <td><%= listing.name %></td>
      <td><%= listing.description %></td>
      <td><%= number_to_currency(listing.price) %></td>
      <td>
        <div class="btn-group">
          <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
            <%= t("seller.action_button") %><span class="caret"></span>
          </button>
          <ul class="dropdown-menu" role="menu">
            <li><%= link_to t("seller.view"), listing, class: "btn btn-link" %></li>
            <li><%= link_to t("seller.edit"), edit_listing_path(listing), class: "btn btn-link" %></li>
            <li><%= link_to t('seller.destroy'), listing, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-link" %></li>
          </ul>
        </div>
      </td>
    </tr>
  <% end %>
</table>

<br>

<% if user_signed_in? %>
  <%= link_to t('seller.new_listing'), new_listing_path, class: "btn btn-primary" %>
<% end %>
</div>