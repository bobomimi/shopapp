<div class="jumbotron">
  <%= t('jumbotron_title_html') %>
  <%= t('jumbotron_subtitle_html') %>
</div>
<div class="center">
  <div class="row">
    <% @listings.each do |listing| %>
      <div class="col-md-3">
        <div class="thumbnail">
          <%= link_to image_tag(listing.image.url), listing %>
          <div class="caption">
            <h3><%= listing.name %></h3>
            <p><%= number_to_currency(listing.price) %></p>
            <p><%= t('sold_by', user: listing.user.name) %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div> 

<br>

<% if user_signed_in? %>
  <%= link_to t('new_listing'), new_listing_path, class: "btn btn-primary", data: { no_turbolink: true } %>
<% end %>
