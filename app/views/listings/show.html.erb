<div class="row">
  <div class="col-md-6">
    <div class="thumbnail">
        <%= image_tag @listing.image.url %>

    </div>
    <script type="text/javascript" src="//www.auctionnudge.com/item_build/js/SellerID/ htgsupply/siteid/0/theme/responsive/MaxEntries/6/page/init/show_logo/1/img_size/80"></script><div id="auction-nudge-items" class="auction-nudge"><a href="https://www.auctionnudge.com/your-ebay-items">Embedded eBay Listings By Auction Nudge</a></div>
    
  </div>
  <div class="col-md-6">
    <h3><%= @listing.name %></h3>
    <p><%= number_to_currency(@listing.price) %></p>
    <p><%= @listing.description %></p>
    <br>
    
      <%= link_to t("listing.buy_it_now"), new_listing_order_path(@listing), class: "btn btn-primary", data: { no_turbolink: true } %>
      <% if current_user == @listing.user %>
  <%= link_to 'Edit', edit_listing_path(@listing), class: "btn btn-primary" %> 
<% end %>
