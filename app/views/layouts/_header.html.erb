<nav dir="rtl" class="navbar navbar-default" role="navigation">
  <!-- Brand and toggle get grouped for better mobile display -->
  <div class="navbar-header">
    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
      <span class="sr-only">Toggle navigation</span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>
    <%= link_to t("navbar.shop"), root_path, class: "navbar-brand" %>
  </div>

  <!-- Collect the nav links, forms, and other content for toggling -->
  <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
    <ul class="nav navbar-nav">
      <li><%= link_to t("navbar.about"), pages_about_path %></li>
      <li><%= link_to t("navbar.contact"), pages_contact_path %></li>
      <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= t("navbar.language") %><b class="caret"></b></a>
          <ul class="dropdown-menu">
              <li><%= link_to t('navbar.hebrew'), root_path(locale: 'he') %></li>
              <li><%= link_to t('navbar.english'), root_path(locale: 'en') %></li>
          </ul>
        </li>
      <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= t("navbar.categories") %><b class="caret"></b></a>
          <ul class="dropdown-menu">
            <% Category.all.each do |category| %>
              <li><%= link_to category.name, listings_path(category: category.name) %></li>
            <% end %>
          </ul>
        </li>
    </ul>
    <ul class="nav navbar-nav navbar-right">
      <% if user_signed_in? %>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= t("navbar.seller_account") %><b class="caret"></b></a>
          <ul class="dropdown-menu">
            <li><%= link_to t("navbar.manage_listings"), seller_path %></li>
            <li><%= link_to t("navbar.sales_history"), sales_path %></li>
          </ul>
        </li>

        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= current_user.name %> <b class="caret"></b></a>
          <ul class="dropdown-menu">
            <li><%= link_to t("navbar.purchase_history"), purchases_path %></li>
            <li><%= link_to t("navbar.edit_profile"), edit_user_registration_path %></li>
            <li><%= link_to t("navbar.sign_out"), destroy_user_session_path, method: :delete %></li>
          </ul>
        </li>
      <% else %>
        <li><%= link_to t("navbar.sign_up"), new_user_registration_path %></li>
        <li><%= link_to t("navbar.sign_in"), new_user_session_path %></li>
      <% end %>
    </ul>
  </div><!-- /.navbar-collapse -->
</nav>






