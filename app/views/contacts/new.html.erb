

<div class= "a2">
<!-- Contact Section -->
    <section id="contact">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading"><%= t('contact.contact_us') %></h2>
                    <h3 class="section-subheading text-muted"></h3>
                </div>
            </div>
                    <%= form_for @contact do |f| %>

            <div class="row">
                <div class="col-lg-12">
                    <form name="sentMessage" id="contactForm" novalidate>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
            <%= f.text_field :name, required: true, placeholder:  t("contact.name"), class: "form-control",required_data_validation_required_message: "Please enter your name." %>
                                    <p class="help-block text-danger"></p>
                                </div>
                                <div class="form-group">
            <%= f.email_field :email, required: true,placeholder: t("contact.email"), class: "form-control" %>
                                    <p class="help-block text-danger"></p>
                                </div>
                                <div class="form-group">
            <%= f.text_field :mobile_phone,placeholder: t("contact.phone"), class: "form-control"  %>

                                    <p class="help-block text-danger"></p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
            <%= f.text_area :message, as: :text,placeholder: t("contact.message") , class: "form-control"  %></textarea>
                                    <p class="help-block text-danger"></p>
                                </div>
                            </div>
                            <div class="clearfix"></div>
                            <div class="col-lg-12 text-center">
                                <div id="success"></div>
                                <%= f.submit t('contact.send_message'), class: "btn btn-xl" %>
            <% end %>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
</div>