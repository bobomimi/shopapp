<div class="center">
  <h2><%= t("purchase.your_purchase_history") %></h2>
</div>

<table class="table table-striped table-bordered">
  <tr>
    <th class="center"><%= t("purchase.image") %></th>
    <th class="center"><%= t("purchase.item") %></th>
    <th class="center"><%= t("purchase.price") %></th>
    <th class="center"><%= t("purchase.seller") %></th>
    <th class="center"><%= t("purchase.date_purchased") %></th>
  </tr>

  <% @orders.each do |order| %>
    <tr>
      <td class="center"><%= image_tag order.listing.image.url(:thumb) %></td>
      <td class="center"><%= order.listing.name %></td>
      <td class="center"><%= number_to_currency(order.listing.price) %></td>
      <td class="center"><%= order.seller.name %></td>
      <td class="center"><%= order.created_at.strftime("%-d %B, %Y") %></td>
    </tr>
  <% end %>
</table>

<br>

<% if user_signed_in? %>
  <%= link_to 'New Listing', new_listing_path, class: "btn btn-link" %>
<% end %>